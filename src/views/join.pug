extends base

block content 
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(name="email" ,placeholder="Email", required, type="email")
        input(name="username" ,placeholder="Username", required, type="text")
        input(name="password" ,placeholder="Password", required, type="password")
        input(name="password2" ,placeholder="Confirm Password", required, type="password")
        input(name="name" ,placeholder="Name", required, type="text")
        input(name="location",placeholder="Location", required, type="text")
        input(value="Create Account", type="submit")
    hr
    div
        span Already have an account? 
        br
        a(href="/login") Log in now &rarr;  