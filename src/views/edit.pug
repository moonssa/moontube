extends base

block content 
    h4 Change Title of video
    form(method="POST")
        input(name="title", placeholder="videoTitle", value=video.title, required, maxlength=80)
        input(name="description", placeholder="Description", value=video.description, required, minlength=10)
        input(name="hashtags", placeholder="Hashtags", value=video.hashtags.join(), required)
        input(value="Save", type="submit") 