extends base.pug

block content 
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(name="username" ,placeholder="Username", required, type="text")
        input(name="password" ,placeholder="Password", required, type="password")
        input(value="Log in", type="submit")
        br
        a(href="/users/github/start") Continue GitLogin &rarr;
    div
        span Dont't have an account?     
        a(href="/join") Create one now &rarr;  